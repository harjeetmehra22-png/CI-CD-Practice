pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Test') {
      steps {
        dir('Practical-2') {
          sh 'python3 -m pip install --upgrade pip'
          sh 'pip3 install -r requirements.txt pytest'
          sh 'pytest -q'
        }
      }
    }
    stage('Build Docker Image') {
      steps {
        dir('Practical-2') {
          sh 'docker build -t ci-web .'
        }
      }
    }
    stage('Run & Health Check') {
      steps {
        sh 'docker run -d --name ci-web -p 5000:5000 ci-web'
        sh 'sleep 3'
        sh 'curl -s http://localhost:5000/health | python3 -c "import sys,json; j=json.load(sys.stdin); assert j.get(\"status\")==\"ok\""' 
      }
    }
  }
  post {
    always {
      sh 'docker stop ci-web || true'
      sh 'docker rm ci-web || true'
    }
  }
}
